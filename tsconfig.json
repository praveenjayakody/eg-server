{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "src",
    "incremental": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["*"],
      "@lib/*": ["lib/*"],
      "@utils/*": ["utils/*"],
      "@config/*": ["config/*"],
      "@modules/*": ["modules/*"],
      "@providers/*": ["providers/*"],
      "@helpers/*": ["lib/helpers/*"],
      "@abstracts/*": ["lib/abstracts/*"],
      "@decorators/*": ["lib/decorators/*"],
      "@interceptors/*": ["interceptors/*"],
      "@middlewares/*": ["lib/middlewares/*"],
    },
  }
}
